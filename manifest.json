{
  "name": "Wowhead Quest Checker",
  "description": "Check if your character has completed a quest, right on wowhead.com",
  "version": "1.0.1",
  "permissions": [
    "http://us.battle.net/",
    "http://www.wowhead.com/",
    "tabs",
    "activeTab",
    "storage"
  ],
  
  "icons": {"128": "icon.png"},

  "browser_action": {
    "default_title": "Wowhead Quest Checker"
  },
  "manifest_version": 2,"options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://www.wowhead.com/quest=*"],
      "js": ["getquest.js"]
    }
  ]
}
